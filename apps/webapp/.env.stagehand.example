# Stagehand Configuration
# Copy this file to .env.stagehand and fill in your values

# Enable Stagehand integration (set to 'true' to enable)
USE_STAGEHAND=false

# Environment mode: LOCAL or BROWSERBASE
# LOCAL: Run tests locally without external dependencies (DEFAULT)
# BROWSERBASE: Run tests on BrowserBase cloud infrastructure
STAGEHAND_ENV=LOCAL

# ====================
# LOCAL MODE SETTINGS
# ====================

# Local Browser Options
STAGEHAND_HEADLESS=false  # Set to false to see the browser during tests
STAGEHAND_DEVTOOLS=false  # Enable Chrome DevTools
STAGEHAND_SLOWMO=0  # Slow down operations by specified milliseconds
STAGEHAND_VIEWPORT_WIDTH=1920
STAGEHAND_VIEWPORT_HEIGHT=1080

# ====================
# BROWSERBASE MODE SETTINGS  
# ====================

# BrowserBase Configuration (required when STAGEHAND_ENV=BROWSERBASE)
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here
BROWSERBASE_SESSION_ID=  # Optional: Resume existing session

# ====================
# AI MODEL SETTINGS
# ====================

# Model Configuration
# Examples:
#   - gpt-4o (OpenAI)
#   - gpt-4o-mini (OpenAI)
#   - google/gemini-2.0-flash (Google)
#   - anthropic/claude-3-5-sonnet-latest (Anthropic)
STAGEHAND_MODEL=gpt-4o

# API Keys for AI Models (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
# GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ====================
# COMMON SETTINGS
# ====================

# Debugging and Logging
STAGEHAND_DEBUG=false  # Enable debug logging
STAGEHAND_VERBOSE=0  # Verbosity level (0-2)
STAGEHAND_ENABLE_CACHE=true  # Cache AI responses for faster reruns

# DOM Settings
STAGEHAND_DOM_SETTLE_TIMEOUT=1000  # Wait time for DOM to settle (ms)